// Parent class Sports(Abstract)
abstract class Sports{
    private String name;
    private int playerCount;
    private boolean isPopularInBotswana;

    public Sports(String name, int playerCount, boolean isPopularInBotswana) {
        this.name = name;
        this.playerCount = playerCount;
        this.isPopularInBotswana = isPopularInBotswana;
    
    } 
    // basic getters and setters
    public String getName(){
        return name;
    }
    public void setName(String name){
        this.name = name;
    }
    public int getPlayerCount(){
        return playerCount;
    }
    public void setplayerCount(int playerCount){
        if (playerCount > 0){
            throw new InvalidPlayerCount("Invalid players: " + count + " for " + name);
            }
            this.playerCount = playerCount;
    }
    public boolean getisPopularInBotswana(){
        return isPopularInBotswana;
    }

    // Abstract method for polymorphism
    public abstract void displayRules();
}
